<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: 'Helvetica', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h1 {
            color: #25d366;
            margin-top: 20px;
        }

        form {
            margin-bottom: 20px;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #25d366;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .chats {
            background-color: #fff;
            border: 1px solid #ddd;
            margin: 20px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .msg {
            margin-top: 15px;
            padding: 15px;
            background-color: #dcf8c6;
            border-radius: 8px;
        }

        .sender-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .from {
            color: #25d366;
            font-weight: bold;
        }

        .to {
            color: #888;
        }
    </style>
</head>
<body>
    <h1>Mini Chat</h1>
    <form action="/chat/new" method="GET">
        <button type="submit">Create Message</button>
    </form>
    <% for(let chat of Collection_Data) { %>
        <div class="chats">
            <div class="sender-info">
                <div class="from">From: <%= chat.from %></div>
                <div class="to">To: <%= chat.to %></div>
            </div>
            <div class="msg"><%= chat.message %></div>
        </div>
    <% } %>
</body>
</html>
